{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts"]
}
